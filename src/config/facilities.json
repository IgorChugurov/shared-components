{
  "title": "Facilities",
  "collectionName": "company",
  "forServicePackage": {
    "url": "/api/facilities",

    "reloadEvents": {
      "delete": "reloadCompanies",
      "create": "reloadCompanies",
      "update": "reloadCompanies"
    }
  },
  "reloadEventTitle": "reloadCompanies",
  "forList": {
    "searchBlock": "Search for facilities",

    "buttonBlock": { "title": "New facility" },

    "columnsForGrid": [
      {
        "field": "name",
        "headerName": "Name",
        "flex": 1,
        "type": "naigateToDetails",
        "additioonalUrl": "/entities"
      },

      {
        "field": "createdAt",
        "headerName": "Created",
        "width": 250,
        "type": "date"
      },
      {
        "field": "actions",
        "headerName": "",
        "type": "actions",
        "width": 50,
        "options": {
          "actions": [
            {
              "action": "edit",
              "link": true,
              "icon": "setting",
              "additioonalUrl": "/entities"
            }
          ]
        }
      }
    ],
    "forEmptyList": {
      "title": "You have no facilities!",
      "messages": [
        "Facility  that you create will end up here.",
        "Add a facility to get started."
      ]
    },

    "messages": {
      "afterCreate": "Facility was created successfully!",
      "afterDelete": "Facility was deleted successfully.",
      "afterEdit": "Facility was updated successfully!",
      "forDeleteModal": {
        "modalText": "Are you sure you want to delete ${item.name}?This action cannot be undone.",
        "modalTitle": "Confirm deleting facility",
        "buttonTitle": "Delete"
      }
    }
  },
  "forEdit": {
    "title": ["Create new facility", "Edit facility"],
    "pageHeader": "Group of facilities details",
    "sections": [
      {
        "title": "Info",
        "fields": [
          {
            "name": "name",
            "label": "Facility",
            "placeholder": "Enter facility name",
            "type": "text",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Please enter a facility name"
          }
        ]
      }
    ],
    "buttonText": { "create": "Create", "edit": "Update" }
  }
}
