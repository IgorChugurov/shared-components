{
  "title": "Environment",
  "collectionName": "environment",
  "forServicePackage": {
    "url": "/api/environments",

    "reloadEvents": {
      "update": "reloadEnvironments",
      "create": "reloadEnvironments",
      "delete": "reloadEnvironments"
    }
  },
  "reloadEventTitle": "reloadEnvironments",
  "forList": {
    "searchBlock": "Search for environment",

    "buttonBlock": { "title": "Create new environment" },
    "columnsForGrid": [
      {
        "field": "key",
        "headerName": "Key",
        "flex": 1,
        "type": "openEditPage"
      },

      { "field": "label", "headerName": "Label", "flex": 1 },
      { "field": "valueType", "headerName": "Type", "width": 150 },
      { "field": "destination", "headerName": "Location", "width": 150 },
      {
        "field": "actions",
        "headerName": "",
        "type": "actions",
        "width": 50,
        "options": {
          "actions": [
            {
              "action": "edit"
            }
          ]
        }
      }
    ],
    "forEmptyList": {
      "title": "You have no environments",
      "messages": [
        "Environments that you create will end up here.",
        "Add an environment to get started."
      ]
    },
    "messages": {
      "afterCreate": "Environment was created successfully!",
      "afterDelete": "Environment was deleted successfully!",
      "afterEdit": "Environment was updated successfully!",
      "forDeleteModal": {
        "modalText": "Are you sure you want to delete ${item.name}? This action cannot be undone.",
        "modalTitle": "Confirm deleting",
        "buttonTitle": "Delete environment",
        "confirmWord": "",
        "confirmText": ""
      }
    }
  },
  "forEdit": {
    "title": ["Create new environment", "Edit environment"],
    "pageHeader": "Environment details",
    "buttonText": { "create": "Create", "edit": "Update" },
    "sections": [
      {
        "title": "Key",
        "fields": [
          {
            "name": "key",
            "label": "Environment name",
            "placeholder": "Enter key",
            "type": "text",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Key is required",
            "forEditPageDisabled": false
          }
        ]
      },
      {
        "title": "Configuration",
        "info": {
          "title": "Permanent Settings",
          "text": "Once you select these settings, they can't be changed later. Please review your choices carefully before confirming."
        },
        "fields": [
          {
            "name": "valueType",
            "label": "Key type",
            "placeholder": "Chose key type",
            "type": "select",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Key type is required",
            "forEditPageDisabled": true,
            "options": [
              { "id": "string", "name": "String" },
              { "id": "number", "name": "Number" },
              { "id": "boolean", "name": "Boolean" },
              { "id": "date", "name": "Date" }
            ]
          },
          {
            "name": "destination",
            "label": "Environment location",
            "placeholder": "Select environment location",
            "type": "select",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Environment location is required",
            "forEditPageDisabled": true,
            "options": [
              { "id": "first", "name": "First" },
              { "id": "second", "name": "Second" },
              { "id": "project", "name": "Project" }
            ]
          }
        ]
      },
      {
        "title": "Details",

        "fields": [
          {
            "name": "label",
            "label": "Label",
            "placeholder": "Enter label",
            "type": "text",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Label is required",
            "forEditPageDisabled": false
          },

          {
            "name": "placeholder",
            "label": "Placeholder",
            "placeholder": "Enter placeholder",
            "type": "text",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": false,
            "requiredText": "Placeholder is required",
            "forEditPageDisabled": false
          },
          {
            "name": "description",
            "label": "Description",
            "placeholder": "Enter the description of environment",
            "type": "texa",
            "multiline": true,
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": false,
            "requiredText": "Description is required",
            "forEditPageDisabled": false
          }
        ]
      },
      {
        "title": "Deletion",
        "button": {
          "action": "delete",
          "title": "Delete environment",
          "label": "Deletion this environment cannot be undone.",
          "options": {
            "modalText": "Are you sure you want to delete ${item.name}? ",
            "modalTitle": "Confirm deleting!"
          }
        },
        "fields": []
      }
    ]
  }
}
