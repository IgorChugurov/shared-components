{
  "title": "Facility users",
  "collectionName": "companyAdmins",
  "forServicePackage": {
    "url": "/api/project-users",

    "reloadEvents": {
      "delete": "reloadCompanyAdmins",
      "create": "reloadCompanyAdmins",
      "update": "reloadCompanyAdmins"
    }
  },
  "reloadEventTitle": "reloadCompanyAdmins",

  "forList": {
    "searchBlock": "Search for facilityy users",

    "buttonBlock": { "title": "New facilityy user" },
    "columnsForGrid": [
      {
        "field": "id",
        "headerName": "User id",
        "flex": 1
      },

      {
        "field": "createdAt",
        "headerName": "Invited",
        "width": 250,
        "type": "date"
      },
      {
        "field": "actions",
        "headerName": "",
        "type": "actions",
        "width": 50,
        "options": {
          "actions": [
            {
              "action": "delete",
              "options": {
                "modalText": "Are you sure you want to revoke for  ${item.name}? This action cannot be undone.",
                "modalTitle": "Confirm access revocation",
                "buttonTitle": "Confirm and Revoke Access"
              }
            }
          ]
        }
      }
    ],
    "forEmptyList": {
      "title": "You have no facility admins",
      "messages": [
        "Facility admins that you create will end up here.",
        "Add a facility admin to get started."
      ]
    },
    "messages": {
      "afterCreate": "Facility admin created successfully!",
      "afterDelete": "Facility admin deleted successfully!"
    }
  },
  "forEdit": {
    "title": ["Add new facility admin", ""],
    "pageHeader": "",
    "sections": [
      {
        "title": "Info",
        "fields": [
          {
            "name": "email",
            "label": "Email",
            "placeholder": "Enter email",
            "type": "email",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Please enter a valid email"
          }
        ]
      }
    ],
    "buttonText": { "create": "Invite", "edit": "Update" }
  }
}
