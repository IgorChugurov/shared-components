{
  "title": "Group admins",
  "collectionName": "groupAdmins",
  "forServicePackage": {
    "url": "/api/group-users",
    "reloadEvents": {
      "delete": "reloadGroupAdmins",
      "create": "reloadGroupAdmins",
      "update": "reloadGroupAdmins"
    }
  },
  "reloadEventTitle": "reloadGroupAdmins",
  "forList": {
    "searchBlock": "Search for group admins",

    "buttonBlock": { "title": "New group admin" },
    "columnsForGrid": [
      {
        "field": "email",
        "headerName": "Email",
        "flex": 1
      },

      {
        "field": "createdAt",
        "headerName": "Invited",
        "width": 250,
        "type": "date"
      },
      {
        "field": "actions",
        "headerName": "",
        "type": "actions",
        "width": 50,
        "options": {
          "actions": [
            {
              "action": "delete",
              "options": {
                "modalText": "Are you sure you want to revoke for  ${item.name}? This action cannot be undone.",
                "modalTitle": "Confirm access revocation",
                "buttonTitle": "Confirm and Revoke Access"
              }
            }
          ]
        }
      }
    ],
    "forEmptyList": {
      "title": "You have no group admins",
      "messages": [
        "Group admins that you create will end up here.",
        "Add a group admin to get started."
      ]
    },
    "messages": {
      "afterCreate": "Group admin created successfully!",
      "afterDelete": "Group admin deleted successfully!"
    }
  },
  "forEdit": {
    "title": ["Add new group admin", ""],
    "pageHeader": "Group admin details",
    "buttonText": { "create": "Invite", "edit": "Update" },
    "sections": [
      {
        "title": "Info",
        "fields": [
          {
            "name": "email",
            "label": "Email",
            "placeholder": "Enter email",
            "type": "email",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Email is required"
          }
        ]
      }
    ]
  }
}
