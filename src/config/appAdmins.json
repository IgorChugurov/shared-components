{
  "title": "Admins management",
  "collectionName": "appAdmins",
  "forServicePackage": {
    "url": "/api/primary-users",
    "reloadEvents": {
      "delete": "reloadAppAdmins",
      "create": "reloadAppAdmins",
      "update": "reloadAppAdmins"
    }
  },
  "reloadEventTitle": "reloadAppAdmins",

  "forList": {
    "searchBlock": "Search for admins",

    "buttonBlock": { "title": "New admin" },
    "columnsForGrid": [
      {
        "field": "email",
        "headerName": "Email",
        "flex": 1,
        "type": "naigateToDetails"
      },
      { "field": "role", "headerName": "Role", "width": 150 },
      {
        "field": "createdAt",
        "headerName": "Invited",
        "width": 250,
        "type": "date"
      },
      {
        "field": "actions",
        "headerName": "",
        "type": "actions",
        "width": 50,
        "options": {
          "actions": [
            {
              "action": "delete",
              "options": {
                "modalText": "Are you sure you want to revoke access for ${item.name}? This action cannot be undone.",
                "modalTitle": "Confirm access revocation",
                "buttonTitle": "Confirm and Revoke Access"
              }
            }
          ]
        }
      }
    ],
    "messages": {
      "afterCreate": "Admin created successfully!",
      "afterDelete": "Admin deleted successfully!"
    }
  },
  "forEdit": {
    "title": ["Add new admin", ""],
    "pageHeader": "",
    "sections": [
      {
        "title": "Info",
        "fields": [
          {
            "name": "email",
            "label": "Email",
            "placeholder": "Enter email",
            "type": "email",
            "forEditPage": "yes",
            "forCreatePage": "yes",
            "required": true,
            "requiredText": "Please enter a valid email"
          }
        ]
      }
    ],
    "buttonText": { "create": "Invite", "edit": "Update" }
  }
}
